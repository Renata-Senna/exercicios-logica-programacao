algoritmo "par_impar"

var
   numero, resto : inteiro

inicio

    escreva("Digite um numero: ")
    leia(numero)
    

  // escreval("Resto ", resto)
  
     se(numero MOD 3 = 0) entao

              escreval(numero, " divisivel por 3")
              
     senao
              escreval(numero, " não é divisível por 3")
              
     fimse
    


fimalgoritmo
